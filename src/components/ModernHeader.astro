      </div>

      <!-- Navigation Desktop -->
      <div class="hidden md:flex items-center space-x-8">
        {navItems.map(item => (
          <a 
            href={item.href} 
            class="text-gray-700 hover:text-blue-600 font-medium transition-colors duration-200"
            data-i18n={`nav.${item.key}`}
          >
            {item.name}
          </a>
        ))}
      </div>

