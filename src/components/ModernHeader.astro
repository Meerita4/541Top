  { name: 'Inicio', href: '#hero', key: 'home' },
  { name: 'Pr√≥ximos Eventos', href: '#eventos', key: 'events' },
  { name: 'Servicios', href: '#servicios', key: 'services' },
  { name: 'Equipo', href: '#equipo', key: 'team' },
  { name: 'Contacto', href: '#contacto', key: 'contact' }
